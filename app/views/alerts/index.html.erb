<div class="row">
  <div class="small-12 large-12 columns">
    <h1>Alerts</h1>

    <table>
      <tr>
        <th>Url</th>
        <th>Phone</th>
        <th>Status</th>
        <th>Last updated</th>
      </tr>

    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.url %> > <%= alert.owner_phone %> <%= alert.status %> <%= alert.updated_at %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Alert', new_alert_path %>
  </div>
</div>
